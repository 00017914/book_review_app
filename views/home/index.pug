extends ../layout.pug

block content
  .book-reviews-container
    h1 Book Reviews
    .controls
      button#add-review-btn Add New Review
      .search
        input(type="text" id="search-input" placeholder="Search reviews...")
        button#search-btn Search
        button#reset-search-btn Reset
    
    table
      thead
        tr
          th Title
          th Author
          th Rating
            select#rating-filter
              option(value="") All Ratings
              option(value="5") ★★★★★
              option(value="4") ★★★★
              option(value="3") ★★★
              option(value="2") ★★
              option(value="1") ★
          th Review
          th Actions
      tbody#books-list
        //- Will be populated by JavaScript

    #review-modal.modal
      .modal-content
        span.close-modal &times;
        h2#modal-title Add New Review
        form#review-form
          input(type="hidden" id="review-id")
          .form-group
            label(for="title") Title:
            input(type="text" id="title" required)
          .form-group
            label(for="author") Author:
            input(type="text" id="author" required)
          .form-group
            label(for="rating") Rating:
            select(id="rating" required)
              option(value="") Select rating
              option(value="5") ★★★★★
              option(value="4") ★★★★
              option(value="3") ★★★
              option(value="2") ★★
              option(value="1") ★
          .form-group
            label(for="review") Review:
            textarea(id="review" rows="4" required)
          button(type="submit") Submit

  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
  script(src="/js/home.js")